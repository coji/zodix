{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "root": true,
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
