{
  "name": "@coji/zodix",
  "version": "0.5.0",
  "description": "Parse React Router loaders and actions with Zod",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Coji MIZOGUCHI",
    "email": "coji@techtalk.jp",
    "url": "https://techtalk.jp"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check . --experimental-cli",
    "format:fix": "prettier --write . --experimental-cli",
    "test": "vitest",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run format"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "react-router": "^7.7.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "zod": "^4.0.15"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/coji/zodix",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coji/zodix.git"
  },
  "bugs": {
    "url": "https://github.com/coji/zodix/issues"
  },
  "packageManager": "pnpm@10.8.1"
}
